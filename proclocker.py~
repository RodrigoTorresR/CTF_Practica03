def check_arguments():
    if len(sys.argv)==1:
        print('Este programa no funciona sin argumentos')
        sys.exit(0)

#target = sys.argv[1]

def lock(target):
    for proc in psutil.process_iter():
        if proc.name().lower()==target.lower():
            proc.kill()
            print(f'{target} Detenido')
#           print(f'{target} Detectado')
        
if __name__=='__main__':
    check_arguments()
    target=sys.argv[1]
    lock(target)

